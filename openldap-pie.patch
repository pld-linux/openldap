@@ -44,7 +44,7 @@
 XXXLIBS = $(LTHREAD_LIBS)
 
 slurpd:	version.o
-	$(LTLINK) -o $@ $(OBJS) version.o $(LIBS)
+	$(LTLINK) -pie -Wl,-z,defs -o $@ $(OBJS) version.o $(LIBS)
 
 sslurpd:	version.o
 	$(LTLINK) -static -o $@ $(OBJS) version.o $(LIBS)
